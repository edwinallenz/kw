<%- model_class = Participante -%>
<div class="page-header">
  <h1>Listing OP</h1>
</div>
<table class="table table-striped">
<table>
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:fecha) %></th>
      <th><%= model_class.human_attribute_name(:fecha_entrega) %></th>
      <th><%= model_class.human_attribute_name(:no) %></th>
      <th><%= model_class.human_attribute_name(:tipo) %></th>
      <th><%= model_class.human_attribute_name(:estado) %></th>
      <th><%= model_class.human_attribute_name(:prioridad) %></th>
      <th><%= model_class.human_attribute_name(:cantidad) %></th>
      <th><%= model_class.human_attribute_name(:unidades_planeadas)
      %></th>
      <th><%= model_class.human_attribute_name(:unidades_real) %></th>
      <th><%= model_class.human_attribute_name(:empresa) %></th>
      <th><%= model_class.human_attribute_name(:articulo) %></th>
      <th><%= model_class.human_attribute_name(:articulo) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>

  <tbody>
    <% @orden_produccions.each do |orden_produccion| %>
      <tr>
        <td><%= orden_produccion.fecha %></td>
        <td><%= orden_produccion.fecha_entrega %></td>
        <td><%= orden_produccion.no %></td>
        <td><%= orden_produccion.tipo %></td>
        <td><%= orden_produccion.estado %></td>
        <td><%= orden_produccion.priridad %></td>
        <td><%= orden_produccion.cantidad %></td>
        <td><%= orden_produccion.unidades_pleneadas %></td>
        <td><%= orden_produccion.unidades_real %></td>
        <td><%= orden_produccion.empresa %></td>
        <td><%= orden_produccion.articulo %></td>
	<td>
	  <%= link_to t('.edit', :default => t("helpers.links.edit")),
          edit_orden_produccion_path(orden_produccion), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
          empresa_path(orden_produccion),
          :method => :delete,
          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
          :class => 'btn btn-mini btn-danger' %>
	</td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_orden_produccion_path,
            :class => 'btn btn-primary' %>
