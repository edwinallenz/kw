<%- model_class = Articulo -%>
<div class="page-header">
  <h1>Listing articulos</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:codigo) %></th>
      <th><%= model_class.human_attribute_name(:nombre) %></th>
      <th><%= model_class.human_attribute_name(:tecnica) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>

  <tbody>
    <% @articulos.each do |articulo| %>
      <tr>
        <td><%= articulo.codigo %></td>
        <td><%= articulo.nombre %></td>
        <td><%= articulo.tecnica %></td>
	<td>
	  <%= link_to t('.edit', :default => t("helpers.links.edit")),
          edit_empresa_path(empresa), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
          empresa_path(empresa),
          :method => :delete,
          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
          :class => 'btn btn-mini btn-danger' %>
	</td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_articulo_path,
            :class => 'btn btn-primary' %>
