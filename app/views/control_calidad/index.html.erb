<%- model_class = ControlCalidad -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:fecha) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%= model_class.human_attribute_name(:no_articulos) %></th>
      <th><%= model_class.human_attribute_name(:articulos_buenos) %></th>
      <th><%= model_class.human_attribute_name(:articulos_defetuosos) %></th>
      <th><%= model_class.human_attribute_name(:iteracion) %></th>
      <th><%= model_class.human_attribute_name(:participante_id) %></th>
      <th><%= model_class.human_attribute_name(:orden_produccion_id) %></th>
      <th><%= model_class.human_attribute_name(:articulo_id) %></th>
      <th><%= model_class.human_attribute_name(:tecnico_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @control_calidads.each do |control_calidad| %>
      <tr>
        <td><%= link_to control_calidad.id, control_calidad_path(control_calidad) %></td>
        <td><%= control_calidad.fecha %></td>
        <td><%= control_calidad.status %></td>
        <td><%= control_calidad.no_articulos %></td>
        <td><%= control_calidad.articulos_buenos %></td>
        <td><%= control_calidad.articulos_defetuosos %></td>
        <td><%= control_calidad.iteracion %></td>
        <td><%= control_calidad.participante_id %></td>
        <td><%= control_calidad.orden_produccion_id %></td>
        <td><%= control_calidad.articulo_id %></td>
        <td><%= control_calidad.tecnico_id %></td>
        <td><%=l control_calidad.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_control_calidad_path(control_calidad), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      control_calidad_path(control_calidad),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_control_calidad_path,
            :class => 'btn btn-primary' %>
